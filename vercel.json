{
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "header",
          "key": "host",
          "value": "www.kastrup.cz"
        }
      ],
      "destination": "https://kastrup.cz/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap"
    },
    {
      "source": "/((?!assets|icon|manifest|robots|sitemap).*)",
      "destination": "/index.html"
    }
  ]
}
